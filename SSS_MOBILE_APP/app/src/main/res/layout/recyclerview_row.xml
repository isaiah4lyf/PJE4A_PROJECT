<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="@drawable/homeback"
    android:layout_height="390dp"
    android:layout_marginTop="5dp"
    android:textColor="#FF000000"
    android:layout_marginBottom="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvAnimalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/divider2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvAnimalName"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/contentDividerLine" />
    <LinearLayout
        android:id="@+id/viLayout"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/divider2"
        android:layout_width="350dp"
        android:visibility="gone"
        android:layout_height="240dp">

        <VideoView android:id="@+id/videoView"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/imagecardview"
        android:layout_below="@+id/viLayout"
        android:layout_width="350dp"
        android:layout_height="240dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bixby"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"
            android:src="@drawable/bixby" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/content"
        android:layout_below="@+id/imagecardview"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="#FF000000"
        android:textStyle="italic"
        android:text="On March 20, 2017, Samsung announced the voice-powered digital assistant named bixby.
                       [9] Bixby was introduced alongside the Samsung Galaxy S8 and S8+,
                       as well as the Samsung Galaxy Tab A during the Samsung Galaxy Unpacked 2017 event, which was held on March 29, 2017.[10][11] Samsung officially unveiled Bixby a week before launch but it only made its first appearance during the event.[12] Bixby can also be sideloaded on older Galaxy devices running Android Nougat.[13] Bixby represents a major reboot for S Voice, Samsung's voice assistant app introduced in 2012 with the Galaxy S III.[14][15]
                       In May 2017, Samsung announced that Bixby would be coming to its line
                       of Family Hub 2.0 refrigerators, making it the first non-mobile product to include the virtual assistant.[16]"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/divider"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/contentDividerLine" />
    <TextView
        android:id="@+id/readMore"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="#9DC8F9"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_arrow_forward_black_dp"
        android:text="Read More"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="90dp"
        android:layout_toEndOf="@+id/readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#FF000000"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_adjust_black_dp"
        android:text="15 Minutes ago."
        android:textSize="12sp"/>
</RelativeLayout>